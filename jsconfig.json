{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/lib/*": ["lib/*"],
      "@/constants/*": ["constants/*"],
      "@/utils/*": ["utils/*"],
      "@/types/*": ["types/*"]
    },
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "app",
    "components",
    "hooks",
    "lib",
    "constants",
    "utils",
    "types",
    "expo.config.js",
    "package.json"
  ]
}
